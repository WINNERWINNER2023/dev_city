</ul>
<!-- 메뉴 끝 -->

<script>
  const menu = '<%= locals.components.split(' / ')[0] %>';
  const nav = document.querySelectorAll('.nav-link');
  switch (menu) {
    case 'products':
      nav[0].classList.add('active');
      break;
    case 'customers':
      nav[1].classList.add('active');
      break;
    case 'orders':
      nav[2].classList.add('active');
      break;
  }
</script>
